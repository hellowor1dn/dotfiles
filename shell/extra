    alias note="jupyter notebook"
fi

# -----------------------------------------------------------------------------
# | focal                                                                      |
# -----------------------------------------------------------------------------
alias focal="${HOME}/work/focal/"
alias lib="${HOME}/Repositories/focal-library"
alias repo="${HOME}/Repositories"
alias launcher="${HOME}/Repositories/focal-launcher"
alias shopper="${HOME}/Repositories/focal-shopper"
alias cashier="${HOME}/Repositories/focal-cashier"
alias fde="${HOME}/Repositories/focal-fde"
